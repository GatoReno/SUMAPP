<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SUMATEAPPT2.detail">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <Image
                Margin="0,10,0,0"
                Source="icon_fs.png"
                WidthRequest="100"
                HeightRequest="100"/>
            <Label Text="Sumate Financiera"
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="ErrorVisitis"
                HorizontalOptions="CenterAndExpand" />

            <ListView  x:Name="visitsView"
                       ItemTapped="visitsView_ItemTapped"
                       ItemsSource="{Binding Cvisita}" 
                        CachingStrategy="RecycleElement"
                 >
                
                <ListView.ItemTemplate>
                    
                    <DataTemplate>
                        <ViewCell>
                            <ScrollView>
                                <StackLayout                                     Orientation="Horizontal">

                                <Label 
                                Text="{Binding id}"
                                    TextColor="#006140"
                                Margin="0,10,0,10"
                                />
                                <Label 
                                Text="{Binding fecha}"
                                    TextColor="#006140"
                                Margin="0,10,0,10"
                                />
                                <Label 
                                Text="{Binding cliente}"
                                Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                                <Label 
                                Text="{Binding numero}"
                                Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                                <Label 
                                Text="{Binding calle}"
                                   Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                                <Label 
                                Text="{Binding colonia}"
                                   Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                                <Label 
                                Text="{Binding municipio}"
                                   Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                                <Label 
                                Text="{Binding ciudad}"
                                   Margin="0,10,0,10"
                                    TextColor="#006140"
                                />
                            </StackLayout>
                                </ScrollView>
                        </ViewCell>
                        

                   
                    </DataTemplate>

                   
                </ListView.ItemTemplate>
            </ListView>


